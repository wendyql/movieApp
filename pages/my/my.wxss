/* pages/my/my.wxss */
.container {
background-color: #fff;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    height: 92px;
    position: relative;
  } 
  .bgImg{
    position: absolute;
    height: 100%;
    z-index: 5;
  }
  .login{
    position: absolute;
    top:20%;
    left: 32%;
    margin: 10rpx;
    color: #444;
    background-color: #fff;
  }
  .userinfo-avatar {
    position: absolute;
    top:0;
    left: 38%;
    width: 140rpx;
    height: 140rpx;
    margin: 10rpx;
    border-radius: 50%;
    z-index: 6;
  }
  
  .userinfo-nickname {
    position: absolute;
    bottom: 2%;
    left: 40%;
    z-index: 6;
    color: #fff;
  }
  .update{
    position: absolute;
    top: 5%;
    right: 5%;
    color: #fff;
    text-decoration:underline;
    z-index: 7;
  }
  .usermotto {
    margin-top: 200px;
  }

  .hr {
    width: 100%;
    height: 1px;
    background-color: #ccc;
  }
  .item {
    display: flex;
    flex-direction: row;
  }
  
  .title {
    padding-top: 15px;
    padding-bottom: 15px;
    padding-left: 15px;
    font-size: 15px;
  }
  
  .detail2 {
    font-size: 15px;
    position: absolute;
    right: 10px;
    height: 50px;
    line-height: 50px;
    color: #888;
  }
  
  .line {
    border: 1px solid #ccc;
    opacity: 0.2;
  }